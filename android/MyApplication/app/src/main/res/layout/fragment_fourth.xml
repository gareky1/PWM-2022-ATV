<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FD000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="30sp"
            app:cardBackgroundColor="@color/black">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gi"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:padding="10sp"
                    app:srcCompat="@drawable/part3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingTop="15sp"
                    android:text="MUSEU COMO ORGANISMO EXTRAORDINARIO"
                    android:textAlignment="center"
                    android:textColor="#FFFAFA"
                    android:textSize="20sp"

                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="////////////////////////////////////////////////////////"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginTop="10sp"
            android:columnCount="2"
            android:rowCount="2">

            <androidx.cardview.widget.CardView

                android:layout_rowWeight="0"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                app:cardBackgroundColor="@color/cardview_shadow_end_color">

                <ImageView
                    android:id="@+id/tela3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:background="#070707"
                    android:src="@drawable/part4"
                    app:srcCompat="@drawable/part4" />


            </androidx.cardview.widget.CardView>

        </GridLayout>

        <GridLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="50sp"
            android:layout_marginRight="20sp"
            android:columnCount="2"
            android:rowCount="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:paddingTop="10sp"
                android:text="A construção desse museu seguiu o conceito do Museu Extraordinário, usamos a sua estrutura e fachadas como quebra do padrão local. O desenvolvimento do projeto também seguiu a linha do museu a céu aberto tendo o intuito de trazer a rua para dentro do edifício, para essa ideia ser realizada criamos um vão no térreo com um pé direito mais alto para uso de exposições interativas onde todos que passam possam deixar um pouco de si nas telas expostas, também criamos espaços de convivência convidando as pessoas a ficarem no local, seguindo o desejo de fazer a rua adentrar o edifício mantivemos a paginação da rua no térreo, tornando o edifício mais interativo com o local. O edifício possui também um primeiro andar com telas interativas pra quem está na rua também possa as vê, como também foi proposto um teto jardim e um muro verde em busca de um conforto maior ao museu."
                android:textAlignment="center"
                android:textColor="#E8DFDF"
                android:textSize="20sp" />
        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="////////////////////////////////////////////////////////"
            android:textAlignment="center"
            android:textSize="20sp" />


    </LinearLayout>

</ScrollView>