<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7F09AA"
    tools:context=".Henrique">


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="#6A6161"
        android:columnCount="1"
        android:rowCount="1"
        >


        <androidx.cardview.widget.CardView

            android:layout_rowWeight="1"
            android:layout_columnWeight="0"
            android:layout_gravity="center"
            android:layout_margin="20sp"
            app:cardBackgroundColor="@color/cardview_shadow_end_color"
            app:cardCornerRadius="200sp">

            <ImageView
                android:id="@+id/henrique"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:foreground="@drawable/photo"
                android:src="@drawable/ic_launcher_foreground" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingTop="25sp"
            android:text="HENRIQUE LIRA"
            android:textAlignment="center"
            android:textColor="#0B0A0A"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="5sp"
            android:text="Cursando 6º Periodo diurno em Ciência da Computação na Universidade Católica De Pernambuco(UNICAP)"
            android:textAlignment="center"
            android:textColor="#0B0A0A"
            android:textSize="15sp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:background="#7F09AA"
            android:columnCount="1"
            android:rowCount="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:paddingTop="5sp"
                android:text="Cursando 6º Periodo diurno em Ciência da Computação na Universidade Católica De Pernambuco(UNICAP)"
                android:textAlignment="center"
                android:textColor="#7F09AA"
                android:textSize="15sp" />

        </GridLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10sp"
            android:text="Contato"
            android:textAlignment="center"
            android:textColor="#0B0A0A"
            android:textSize="25sp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="#6A6161"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_gravity="center"
            >

            <androidx.cardview.widget.CardView

                android:layout_rowWeight="0"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                app:cardBackgroundColor="@color/cardview_shadow_end_color"
                >

                <ImageView
                    android:id="@+id/instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:src="@drawable/insta" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="0"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardCornerRadius="100sp">


            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/github"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_row="0"

                android:layout_column="1"
                android:layout_gravity="center"
                android:src="@drawable/github" />


        </GridLayout>
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:background="#7F09AA"
            android:columnCount="1"
            android:rowCount="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="5sp"
                android:text="Cursando 6º Periodo diurno em Ciência da Computação na Universidade Católica De Pernambuco(UNICAP)"
                android:textAlignment="center"
                android:textColor="#7F09AA"
                android:textSize="15sp" />

        </GridLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="5sp"
            android:text="Sobre Mim"
            android:textAlignment="center"
            android:textColor="#0B0A0A"
            android:textSize="25sp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="#6A6161"
            android:columnCount="1"
            android:rowCount="1"
            android:layout_gravity="center"
            >





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="5sp"
                android:text="Sou uma pessoa reservada que gosta de tranquilidade,mas com grande motivaçao para o meu constante crescimento e desenvolvimento das minhas abilidades proficionais."
                android:textAlignment="center"
                android:textColor="#0B0A0A"
                android:textSize="15sp" />





        </GridLayout>
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:background="#7F09AA"
            android:columnCount="1"
            android:rowCount="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="5sp"
                android:text="Cursando 6º Periodo diurno em Ciência da Computação na Universidade Católica De Pernambuco(UNICAP)"
                android:textAlignment="center"
                android:textColor="#7F09AA"
                android:textSize="15sp" />

        </GridLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="5sp"
            android:text="Competencias"
            android:textAlignment="center"
            android:textColor="#0B0A0A"
            android:textSize="25sp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="#6A6161"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="5sp"
                android:text="

                Boa Comunicação ;
                \n
                \n
                Capaz de trabalhar sob pressão e multitarefa;
                \n
                \n
                Capaz de seguir instruções ;
                \n
                \n
"
                android:textAlignment="center"
                android:textColor="#0B0A0A"
                android:textSize="15sp" />


        </GridLayout>

    </GridLayout>


</ScrollView>